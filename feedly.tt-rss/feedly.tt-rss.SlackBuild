PRGNAM="feedly.tt-rss"
STYLENAME="feedly"
VERSION="1.2.2"
ARCH="noarch"
BUILD=${BUILD:-1}
TAG=${TAG:-sev}

SRCDIR="tt-rss-feedly-theme-${VERSION}"
STYLEROOT=${STYLEROOT:-/var/www/webapps/tt-rss/themes}

PHPUSER=${PHPUSER:-root}
PHPGROUP=${PHPGROUP:-apache}

CWD=$(pwd)
TMP=${TMP:-/tmp/build}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -eu

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf ${SRCDIR}
tar xvf ${CWD}/v${VERSION}.tar.?z*
cd ${SRCDIR}
rm -rf .git* feedly-screenshots/
chown -R ${PHPUSER}:${PHPGROUP} .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 -o -perm 755 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 -o -perm 644 \) \
 -exec chmod 644 {} \;

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
mv  README.md \
    $PKG/usr/doc/$PRGNAM-$VERSION

mkdir -p $PKG/$STYLEROOT
cp -a $TMP/$SRCDIR/* $PKG/$STYLEROOT/

mkdir -p $PKG/install
for METAFILE in 'slack-conflicts' \
                'slack-desc'      \
                'slack-required'  \
                'slack-suggests'; do
    cat $CWD/$METAFILE > $PKG/install/$METAFILE
done

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
